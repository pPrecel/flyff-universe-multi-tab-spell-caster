{
    "manifest_version": 3,
    "name": "Flyff Universe Multi-Tab Spell Caster",
    "version": "1.0.0",
    "description": "Helpful plugin for the web browser version of the Flyff Universe to cast spells from another tab",
    "icons": {
      "48": "images/buffpang_48x48.png",
      "128": "images/buffpang_128x128.png"
    },
    "permissions": ["tabs"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "https://universe.flyff.com/play*"
            ]
        }
    ]
  }
